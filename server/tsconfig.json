{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node", "express", "cors", "bcryptjs", "jsonwebtoken", "vitest/globals"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "prisma", "scripts", "src/tests"]
}